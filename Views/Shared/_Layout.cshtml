<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SkillBox.App</title>
    <link rel="stylesheet" href="~/css/reset-css.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DiplomnaRabotaNet8.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/fontawesome/css/all.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/fontawesome/js/all.js" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-skillBox border-bottom box-shadow mb-3">
            <div class="container-fluid d-flex mx-20">
                <a class="navbar-brand  p-2 " asp-area="" asp-controller="Home" asp-action="Index"><h4 class="my-0">SkillBox</h4></a>
                <ul class="navbar-nav d-flex m-1">

                    <li class="nav-item p-2 ms-2 my-0">
                        <a class="nav-link text-dark btn fw-bold " asp-area="" asp-controller="" asp-action="">Публикувайте работа</a>
                    </li>
                    <li class="nav-item p-2 ms-2">
                        <a class="nav-link text-dark btn fw-bold" asp-area="" asp-controller="" asp-action="">Как работи?</a>
                    </li>
                    <partial name="_LoginPartial" />
                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
