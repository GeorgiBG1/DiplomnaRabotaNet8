@using Data.Models
@using Microsoft.AspNetCore.Identity
@inject SignInManager<SkillBoxUser> SignInManager
@inject UserManager<SkillBoxUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <a class="nav-item nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
    <form class="nav-item form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
        <button type="submit" class="nav-link btn btn-link">Logout</button>
    </form>
}
else
{
    <a class="nav-item nav-link fw-bold" asp-area="Identity" asp-page="/Account/Login">Влизам</a>
    <a id="registerBtn" class="nav-item nav-link fw-bold" asp-area="Identity" asp-page="/Account/Register">Регистрирайте се като професионалист</a>
}
