@using DiplomnaRabotaNet8.Data.Models
@using Microsoft.AspNetCore.Identity
@inject SignInManager<SkillBoxUser> SignInManager
@inject UserManager<SkillBoxUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item p-2 ms-2">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
        </li>
        <li class="nav-item p-2 ms-2">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item p-2 ms-2">
            <a class="nav-link text-dark fw-bold" asp-area="Identity" asp-page="/Account/Login">Влизам</a>
        </li>
        <li class="nav-item p-2 ms-2">
            <a id="registerBtn" class="nav-link text-dark fw-bold" asp-area="Identity" asp-page="/Account/Register">Регистрирайте се като професионалист</a>
        </li>
    }
</ul>
