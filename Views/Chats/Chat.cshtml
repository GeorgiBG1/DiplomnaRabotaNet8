@model ChatDTO
<div class="container my-5">
    <div class="d-flex rounded-2" style="min-height: 500px; background-color: dimgrey;">
        <div class="w-50 m-2 p-2 border border-light rounded-2">
        </div>
        <div class="d-flex flex-column w-100 m-2 p-2 border border-light rounded-2" style="background-color: lightslategray;">
            <div class="d-flex justify-content-between">
                <h5 class="text-center">@Model.Name</h5>
                <span class="fst-italic text-end">Услуга <br /> @Model.ServiceName</span>
            </div>
            <div class="h-100 border border-bottom-0 border-light rounded-top m-3 mb-0 p-2">
                <ul id="messagesList" class="m-0 p-0">
                    @foreach (var message in Model.Messages)
                    {
                        if (message.Owner.UserName == User.Identity?.Name)
                        {
                            <li><span>@message.Content</span></li>
                        }
                        else
                        {
                            <li>@@<span>@message.Owner.UserName @message.Content</span></li>
                        }
                    }
                </ul>
            </div>
            <div class="d-inline-block border border-light rounded-bottom m-3 mt-0 p-2">
                <input type="text" class="w-100" id="messageInput" />
                <input type="button" class="btn btn-primary" id="sendButton" value="Изпрати" />
            </div>
        </div>
    </div>
</div>
@section Scripts
{
<script>
    var userName = '@User.Identity!.Name';
</script>
<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>
}