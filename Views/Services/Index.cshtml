@model AllServiceViewModel
@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<div class="body_content" style="background-color: #ebfaf9;">
    <section class="categories_list_section overflow-hidden">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="listings_category_nav_list_menu">
                        <ul class="mb0 d-flex ps-0">
                            <li><a asp-action="Index" asp-controller="Categories" class="active">Всички категории</a></li>
                            @foreach (var category in Model.CategoryList)
                            {
                                <li><a asp-action="Category" asp-controller="Categories" asp-route-id="@category.Id">@category.Name</a></li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Breadcumb Sections -->
    <section class="breadcumb-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcumb-style1">
                        <div class="breadcumb-list">
                            <a asp-action="Index" asp-controller="Home">Начало</a>
                            <a>Услуги</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Listings All Lists -->
    <section class="pt0 pb90">
        <div class="container">
            <div id="serviceContainer" class="row">
                <div class="col-lg-12 mb15">
                    <h2>Най-новите услуги</h2>
                </div>
                @foreach (var service in Model.ServiceCardDTOs)
                {
                    <div class="col-md-6 serviceCard">
                        <div class="listing-style1 list-style d-block d-xl-flex align-items-center">
                            <div class="list-thumb flex-shrink-0">
                                <img class="w-100" src="@service.MainImage" width="245" height="182" alt="Service image">
                            </div>
                            <div class="list-content flex-grow-1 ms-1">
                                <a href="" class="listing-fav fz12"><span class="far fa-heart"></span></a>
                                <p class="list-text body-color fz14 mb-1">@service.CategoryName</p>
                                <h5 class="list-title"><a asp-action="Service" asp-controller="Services" asp-route-id="@service.Id">@service.Name</a></h5>
                                <div class="review-meta d-flex align-items-center">
                                    <i class="fas fa-star fz10 review-color me-2"></i>
                                    <p class="mb-0 body-color fz14">
                                        <span class="dark-color me-2">
                                            @if (service.ReviewAvgCoef.Equals(double.NaN))
                                            {
                                                <span>0</span>
                                            }
                                            else
                                            {
                                                @service.ReviewAvgCoef.ToString("0.00", CultureInfo.InvariantCulture)
                                            }
                                        </span>
                                        @service.ReviewsCount ревюта
                                    </p>
                                </div>
                                <hr class="my-2">
                                <div class="list-meta d-flex justify-content-between align-items-center mt15">
                                    <a asp-action="Skiller" asp-controller="Skillers" asp-route-id="@service.AuthorUsername">
                                        <span class="position-relative mr10">
                                            <img class="rounded-circle" src="@service.AuthorProfilePhoto" width="30" height="30" alt="Skiller profile photo">
                                            <span class="online-badge"></span>
                                        </span>
                                        <span class="fz14">@service.AuthorName</span>
                                    </a>
                                    <div class="budget">
                                        <p class="mb-0 body-color"><span class="fz17 fw500 dark-color ms-1">@service.Price</span></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <!--Load more services-->
            <div class="col-lg-12">
                <div class="text-center mt30">
                    <a onclick="getSCountAndLoadMore()" class="btn ud-btn btn-light-thm bdrs60">Зареди още<i class="fal fa-arrow-right-long"></i></a>
                </div>
            </div>
        </div>
    </section>
    @section Scripts {
        @* <script src="~/ajax/services.js"></script> *@
        <script>
            // Define a callback function to handle the returned data
            function handleNewServices(services) {
                let container = $("#serviceContainer");
                services.forEach(service => {
                    // Create a new service card element and append it to the container
                    let serviceCard = $("<div>").addClass("col-md-6 serviceCard");
                    serviceCard.append(`<img class="w-100" src="${service.MainImage}" width="245" height="182" alt="Service image">`);
                    serviceCard.append(`<p class="list-text body-color fz14 mb-1">${service.CategoryName}</p>`);
                    serviceCard.append(`<h5 class="list-title"><a asp-action="Service" asp-controller="Services" asp-route-id="${service.Id}">${service.Name}</a></h5>`);
                    serviceCard.append(`<p class="mb-0 body-color fz14"><span class="dark-color me-2">${service.ReviewAvgCoef.toFixed(2)}</span>${service.ReviewsCount} ревюта</p>`);
                    serviceCard.append(`<a asp-action="Skiller" asp-controller="Skillers" asp-route-id="${service.AuthorUsername}"><img class="rounded-circle" src="${service.AuthorProfilePhoto}" width="30" height="30" alt="Skiller profile photo"><span class="fz14">${service.AuthorName}</span></a>`);
                    serviceCard.append(`<p class="mb-0 body-color"><span class="fz17 fw500 dark-color ms-1">${service.Price}</span></p>`);
                    container.append(serviceCard);
                });
            }

            // Pass the callback function to LoadMoreServices
            function getSCountAndLoadMore() {
                let services = $(".serviceCard");
                let sCount = services.length;
                debugger;
                let a = loadMoreServices(sCount, handleNewServices);
            }
            function loadMoreServices(servicesCount, callback) {
                debugger;
                $.ajax({
                    url: "/Services/LoadMoreServices",
                    type: "GET",
                    data: { currentServicesCount: servicesCount },
                    success: callback, // Pass the callback function directly
                    dataType: "html" // Specify the expected data type as HTML
                });
            }
        </script>
    }
    <a class="scrollToHome at-home2" href=""><i class="fas fa-angle-up"></i></a>
</div>