@model IEnumerable<ServiceCardDTO>
<div class="container">
    <div class="row">
        @foreach (var sCard in Model)
        {
            <div class="card" style="width: 261px; height: auto;">
                <img class="card-img-top" src="@sCard.MainImage" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">@sCard.Name</h5>
                    <p class="card-text">@sCard.Description[..50]...-> @sCard.Description.Take(50).Count()</p>
                    <hr />
                    <p class="card-text">@sCard.Description -> @sCard.Description.Count()</p>
                    <div>
                        <p class="card-text">@sCard.CategoryName</p>
                        <p class="card-text">@sCard.AuthorName</p>
                        @if (sCard.Discount > 0.00m)
                        {
                            <p>
                                <span class="text-decoration-line-through">@(sCard.Price)лв</span>
                                <b class="font-monospace">@(sCard.Price - sCard.Discount)лв</b>
                                <br />
                                <span style="font-style: italic;">Намаление @(sCard.Discount)лв</span>
                            </p>
                        }
                        else
                        {
                            <p>@(sCard.Price)лв</p>
                        }
                    </div>

                    <a href="#" class="btn btn-primary">Go somewhere</a>
                </div>
            </div>
        }
    </div>
</div>
