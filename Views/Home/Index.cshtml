@model HomeViewModel

<div class="body_content">
    <!-- Home Banner -->
    <section class="hero-home2 pb100-xs" style="background-color: #1F4B3F; background-image: url(" https: //demoapus1.com/freeio-new/wp-content/uploads/2022/10/slider2_bg.png");">
        <div class="container">
            <div class="row mb60 mb0-xl">
                <div class="col-xl-7">
                    <div class="pr30 pr0-lg mb30-md position-relative">
                        <h1 class="animate-up-1 mb25 text-white">
                            Перфектните Skiller <br class="d-none d-xl-block">услуги за вашия дом или бизнес
                        </h1>
                        <p class="text-white animate-up-2">Наемете Skiller, който да дойде на избрано от вас място и <br class="d-none d-lg-block"> да свърши нещо вместо вас!</p>
                        <div class="advance-search-tab bgc-white p10 bdrs4-sm bdrs60 banner-btn position-relative zi1 animate-up-3 mt30">
                            <div class="row">
                                <div class="col-md-5 col-lg-6 col-xl-6">
                                    <div class="advance-search-field mb10-sm">
                                        <form class="form-search position-relative">
                                            <div class="box-search">
                                                <span class="icon far fa-magnifying-glass"></span>
                                                <input class="form-control" type="text" name="search" placeholder="Каква услуга търсиш?">
                                                <div class="search-suggestions">
                                                    <h6 class="fz14 ml30 mt25 mb-3">Популярни търсения</h6>
                                                    <div class="box-suggestions">
                                                        <ul class="px-0 m-0 pb-4">
                                                            <li>
                                                                <div class="info-product">
                                                                    <div class="item_title">mobile app development</div>
                                                                </div>
                                                            </li>
                                                            <li>
                                                                <div class="info-product">
                                                                    <div class="item_title">mobile app builder</div>
                                                                </div>
                                                            </li>
                                                            <li>
                                                                <div class="info-product">
                                                                    <div class="item_title">mobile legends</div>
                                                                </div>
                                                            </li>
                                                            <li>
                                                                <div class="info-product">
                                                                    <div class="item_title">mobile app ui ux design</div>
                                                                </div>
                                                            </li>
                                                            <li>
                                                                <div class="info-product">
                                                                    <div class="item_title">mobile game app development</div>
                                                                </div>
                                                            </li>
                                                            <li>
                                                                <div class="info-product">
                                                                    <div class="item_title">mobile app design</div>
                                                                </div>
                                                            </li>
                                                        </ul>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                                <div class="col-md-4 col-lg-4 col-xl-3">
                                    <div class="bselect-style1 bdrl1 bdrn-sm">
                                        <select class="selectpicker" data-width="100%" asp-items="@Model.CategoryList">
                                            <option disabled>Избери категория</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-3 col-lg-2 col-xl-3">
                                    <div class="text-center text-xl-start">
                                        <button class="ud-btn btn-thm w-100 bdrs60" type="button">Търси</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row mt20 animate-up-4">
                            <div class="col-xl-9">
                                <div class="row justify-content-between">
                                    <div class="col-6 col-sm-3 funfact_one at-home2-hero">
                                        <div class="details">
                                            <ul class="ps-0 mb-0 d-flex">
                                                <li><div class="timer">@Model.ServicesCount</div></li>
                                                @* <li><span>M</span></li> *@
                                            </ul>
                                            <p class="text-white mb-0">Услуги</p>
                                        </div>
                                    </div>
                                    <div class="col-6 col-sm-3 funfact_one at-home2-hero">
                                        <div class="details">
                                            <ul class="ps-0 mb-0 d-flex">
                                                <li><div class="timer">@Model.SkillersCount</div></li>
                                                @* <li><span>M</span></li> *@
                                            </ul>
                                            <p class="text-white mb-0">Skillers</p>
                                        </div>
                                    </div>
                                    <div class="col-6 col-sm-3 funfact_one at-home2-hero">
                                        <div class="details">
                                            <ul class="ps-0 mb-0 d-flex">
                                                <li><div class="timer">@Model.PositiveReviewsCount</div></li>
                                                @* <li><span>M</span></li> *@
                                            </ul>
                                            <p class="text-white mb-0">Позитивни ревюта</p>
                                        </div>
                                    </div>
                                    <div class="col-6 col-sm-3 funfact_one at-home2-hero pe-0">
                                        <div class="details">
                                            <ul class="ps-0 mb-0 d-flex">
                                                <li><div class="timer">@Model.SkillsCount</div></li>
                                                @* <li><span>M</span></li> *@
                                            </ul>
                                            <p class="text-white mb-0">Умения</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-5 d-none d-xl-block position-relative">
                    <img src="images/h12.png" alt="" class="animate-up-1 main-img-home2">
                    <div class="home2-hero-content position-relative">
                        <div class="iconbox-small1 d-none d-xl-flex wow fadeInRight default-box-shadow4 bounce-x animate-up-1">
                            <span class="icon flaticon-review"></span>
                            <div class="details pl20">
                                <h6 class="mb-1">Доказателство за качество</h6>
                                <p class="text fz13 mb-0">Сайт за услуги и умения 2024</p>
                            </div>
                        </div>
                        <div class="iconbox-small2 d-none d-xl-flex wow fadeInLeft default-box-shadow4 bounce-y animate-up-2">
                            <span class="icon flaticon-review"></span>
                            <div class="details pl20">
                                <h6 class="mb-1">Безопасно и сигурно</h6>
                                <p class="text fz13 mb-0">Директна комуникация</p>
                            </div>
                        </div>
                        <img src="images/link3.png" alt="" class="bounce-x bdrs16 img-1 default-box-shadow4">
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Need something -->
    <section class="our-features pb90 pb30-md pt60">
        <div class="container wow fadeInUp">
            <div class="row">
                <div class="col-lg-12">
                    <div class="main-title">
                        <h2>Чудиш се какво предлагаме ние?</h2>
                        <p class="text">Най-гледаните и най-предлаганите услуги</p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6 col-lg-3">
                    <div class="iconbox-style1 at-home5 p-0">
                        <div class="icon before-none"><span class="flaticon-cv"></span></div>
                        <div class="details">
                            <h4 class="title mt10 mb-3">Публикувай услуга</h4>
                            <p class="text">Публикувай услуга безплатно и лесно. Просто попълни <br class="d-none d-xxl-block"> заглавие, описание и основното умение.</p>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6 col-lg-3">
                    <div class="iconbox-style1 at-home5 p-0">
                        <div class="icon before-none"><span class="flaticon-web-design"></span></div>
                        <div class="details">
                            <h4 class="title mt10 mb-3">Избери skiller-и</h4>
                            <p class="text">Наеми безплатно професионалисти, които <br class="d-none d-xxl-block"> да извършат желаната работа от теб.</p>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6 col-lg-3">
                    <div class="iconbox-style1 at-home5 p-0">
                        <div class="icon before-none"><span class="flaticon-secure"></span></div>
                        <div class="details">
                            <h4 class="title mt10 mb-3">Комуникирай безопасно</h4>
                            <p class="text">Започни директна коспонденция с skiller<br class="d-none d-xxl-block"> и покани още участници към разговора.</p>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6 col-lg-3">
                    <div class="iconbox-style1 at-home5 p-0">
                        <div class="icon before-none"><span class="flaticon-customer-service"></span></div>
                        <div class="details">
                            <h4 class="title mt10 mb-3">Ние сме тук да помагаме</h4>
                            <p class="text">Незабавна връзка с нас. При нужда <br class="d-none d-xxl-block"> от помощ посети Помощ.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Popular Services -->
    <section class="pt-0 pb100">
        <div class="container">
            <div class="row align-items-center wow fadeInUp">
                <div class="col-xl-3">
                    <div class="main-title mb30-lg">
                        <h2 class="title">Топ услуги</h2>
                        <p class="paragraph">Най-популярните услуги на едно място</p>
                    </div>
                </div>
            </div>
            <div class="row">
                @foreach (var service in Model.ServiceCardDTOs)
                {
                    <div class="col-sm-6 col-xl-3">
                        <div class="listing-style1 bdrs16">
                            <div class="list-thumb">
                                <img class="w-100" src="@service.MainImage" width="329" height="245" alt="service image">
                                <a href="" class="listing-fav fz12"><span class="far fa-heart"></span></a>
                            </div>
                            <div class="list-content">
                                <p class="list-text body-color fz14 mb-1">@service.CategoryName</p>
                                <h5 class="list-title"><a asp-action="Service" asp-controller="Services" asp-route-id="@service.Id">@service.Name</a></h5>
                                <div class="review-meta d-flex align-items-center">
                                    <i class="fas fa-star fz10 review-color me-2"></i>
                                    <p class="mb-0 body-color fz14">
                                        <span class="dark-color me-2">
                                            @if (service.ReviewAvgCoef.Equals(double.NaN))
                                            {
                                                <span>0</span>
                                            }
                                            else
                                            {
                                                @service.ReviewAvgCoef.ToString("0.00", CultureInfo.InvariantCulture)
                                            }
                                        </span>@service.ReviewsCount ревюта
                                    </p>
                                </div>
                                <hr class="my-2">
                                <div class="list-meta d-flex justify-content-between align-items-center mt15">
                                    <a asp-action="Skiller" asp-controller="Skillers" asp-route-id="@service.AuthorUsername" class="d-flex">
                                        <span class="position-relative mr10">
                                            <img class="rounded-circle wa" src="@service.AuthorProfilePhoto" width="40" height="40" alt="skiller profile photo">
                                            <span class="online-badges"></span>
                                        </span>
                                        <span class="fz14">@service.AuthorName</span>
                                    </a>
                                    <div class="budget">
                                        <span class="fz17 fw500 dark-color ms-1">@service.Price</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }

                <div class="col-lg-12">
                    <div class="text-center mt30">
                        <a asp-action="Index" asp-controller="Services" class="ud-btn btn-light-thm bdrs60">Всички услуги<i class="fal fa-arrow-right-long"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA Banner -->
    <section class="cta-banner-about2 before-none at-home2 position-relative py-0">
        <div class="container position-relative">
            <div class="row align-items-center">
                <div class="col-lg-7 col-xl-5 mb100-md">
                    <div class="mb30">
                        <h5 class="text-thm fst-italic">За клиенти</h5>
                        <h2 class="title fst-italic">Намерете услуга по категория</h2>
                    </div>
                    <p class="text">Работете с най-голямата мрежа от независими skiller-и и <br class="d-none d-lg-block"> свършете нещата – от бързa домакинска работа до организиране на събития.</p>
                    <a asp-action="Index" asp-controller="Categories" class="ud-btn btn-thm bdrs90 default-box-shadow2 mt15 mb30-sm fst-italic">Категории<i class="fal fa-arrow-right-long"></i></a>
                </div>
                <div class="col-lg-5 col-xl-4 offset-xl-1 position-relative">
                    <div class="listbox-style1 px30 py-5 bdrs16 bgc-thm2 mt30-md position-relative">
                        <div class="list-style1">
                            <ul class="mb-0">
                                <li class="text-white fw500 fw-bold fst-italic"><i class="far fa-check dark-color bgc-white"></i>Най-доброто за всеки бюджет</li>
                                <li class="text-white fw500 fw-bold fst-italic"><i class="far fa-check dark-color bgc-white"></i>Качествено и бързо извършена услуга</li>
                                <li class="text-white fw500 fw-bold fst-italic"><i class="far fa-check dark-color bgc-white"></i>Защитена кореспонденция с чатове</li>
                                <li class="text-white fw500 fw-bold fst-italic mb-0"><i class="far fa-check dark-color bgc-white"></i>24/7 поддръжка</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <img class="home2-cta-img" src="~/images/h2.png" alt="">
    </section>

    <!-- Categories -->
    <section class="pb-0 pt0">
        <div class="container">
            <div class="row align-items-center wow fadeInUp" data-wow-delay="300ms">
                <div class="col-lg-9">
                    <div class="main-title2">
                        <h2 class="title">Търси услуги по категории</h2>
                        <p class="paragraph">Всички категории на едно място</p>
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="text-start text-lg-end mb-4">
                        <a asp-action="Index" asp-controller="Categories" class="ud-btn btn-light-thm bdrs90">Всички категории<i class="fal fa-arrow-right-long"></i></a>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 wow fadeInUp" data-wow-delay="300ms">
                    <div class="dots_none slider-dib-sm slider-5-grid vam_nav_style owl-theme owl-carousel">
                        @foreach (var cCard in Model.CategoryCardDTOs)
                        {
                            <div class="item">
                                <div class="feature-style1 mb30 bdrs16">
                                    <div class="feature-img bdrs16 overflow-hidden"><img class="w-100" src="@cCard.MainImage" width="260" height="301" alt="Category Image"></div>
                                    <div class="feature-content">
                                        <div class="top-area">
                                            <h6 class="title mb-1">@cCard.ServicesCount услуги</h6>
                                            @if (cCard.Name.Contains(" и "))
                                            {
                                                <h5 class="text">
                                                    @for (int i = 0; i < cCard.Name.Split(" и ").Count(); i++)
                                                    {
                                                        @cCard.Name.Split(" и ")[i]
                                                        <br class="d-none d-lg-block">
                                                    }

                                                </h5>
                                            }
                                            else
                                            {
                                                <h5 class="text">@cCard.Name</h5>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Highest Rated Skillers -->
    <section class="pt90 pt60-md pb130 pb60-md">
        <div class="container">
            <div class="row align-items-center wow fadeInUp">
                <div class="col-lg-9">
                    <div class="main-title">
                        <h2 class="title">Skiller-и с най-висок рейтинг</h2>
                        <p class="paragraph">Наемете най-подходящите хора за вашите услуги!</p>
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="text-start text-lg-end mb-4">
                        <a asp-action="Index" asp-controller="Skillers" class="ud-btn btn-light-thm bdrs90">Skiller-и<i class="fal fa-arrow-right-long"></i></a>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="navi_pagi_bottom_center slider-4-grid owl-carousel owl-theme">
                        @foreach (var skiller in Model.UserCardDTOs)
                        {
                            <div class="item">
                                <div class="freelancer-style1 text-center bdr1 hover-box-shadow mb60 bdrs16" style="background-color: rgba(91, 187, 123, 0.1);">
                                    <div class="thumb w90 mb25 mx-auto position-relative rounded-circle">
                                        <img class="rounded-circle mx-auto" src="@skiller.ProfilePhoto" width="90" height="90" alt="skiller profile photo">
                                        <span class="online"></span>
                                    </div>
                                    <div class="details">
                                        <h5 class="title mb-1">@skiller.Name</h5>
                                        @if (skiller.Career != null)
                                        {
                                            <p class="mb-0">Професия: @skiller.Career</p>
                                        }
                                        else
                                        {
                                            <p class="mb-0">Професия: <span class="px-4 text-center fw-bold">-</span></p>
                                        }
                                        <p class="mb-0 ms-1 text-start ps-4">Услуги (<b>@skiller.ServicesCount</b>)</p>
                                        <div class="review">
                                            <p>
                                                <i class="fas fa-star fz10 review-color pr10"></i>
                                                <span class="dark-color">
                                                    @if (skiller.ReviewAvgCoef.Equals(double.NaN))
                                                    {
                                                        <span>0</span>
                                                    }
                                                    else
                                                    {
                                                        @skiller.ReviewAvgCoef.ToString("0.00", CultureInfo.InvariantCulture)
                                                    }
                                                </span> (@skiller.ReviewsCount ревюта)
                                            </p>
                                        </div>
                                        <hr class="opacity-100 mt20 mb15">
                                        <div class="fl-meta d-flex align-items-center justify-content-between">
                                            <a class="meta fw500 text-start">Намира се в град<br><span class="fz14 fw400">@skiller.City</span></a>
                                        </div>
                                        <div class="d-grid mt15">
                                            <a asp-action="Skiller" asp-controller="Skillers" asp-route-id="@skiller.Username" class="ud-btn btn-light-thm bdrs90">Виж профил<i class="fal fa-arrow-right-long"></i></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
    <a class="scrollToHome at-home2" href="#"><i class="fas fa-angle-up"></i></a>
</div>